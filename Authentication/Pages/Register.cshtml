@page
@model Authentication.Pages.RegisterModel
@{
}

<div class="container">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <h1>Register</h1>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="Model.UserName">User Name</label>
                    <input type="text" asp-for="Model.UserName" class="form-control" />
                    <span asp-validation-for="Model.UserName"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Model.Email">Email</label>
                    <input type="text" asp-for="Model.Email" class="form-control" />
                    <span asp-validation-for="Model.Email"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Model.Password">Password</label>
                    <input type="password" asp-for="Model.Password" class="form-control" />
                    <span asp-validation-for="Model.Password"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Model.ConfirmPassword">Confirm Password</label>
                    <input type="password" asp-for="Model.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Model.ConfirmPassword"></span>
                </div>
                <div>
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>