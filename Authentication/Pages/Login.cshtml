@page
@model Authentication.Pages.LoginModel
@{
}

<div class="container">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <h1>Login</h1>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="Model.UserName">User Name</label>
                    <input type="text" asp-for="Model.UserName" class="form-control" />
                    <span asp-validation-for="Model.UserName"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Model.Password">Password</label>
                    <input type="password" asp-for="Model.Password" class="form-control" />
                    <span asp-validation-for="Model.Password"></span>
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" asp-for="Model.RrememberMe" class="form-check-input" />
                    <label class="form-check-label" asp-for="Model.RrememberMe">Remember ME?</label>
                </div>
                <div>
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>